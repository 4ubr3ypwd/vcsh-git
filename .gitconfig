[alias]

	# GUI's
	towerlog        = "! /bin/sh $HOME/.gitscripts/towerlog.sh"
	towerl          = towerlog
	tower           = "! /bin/sh $HOME/.gitscripts/tower.sh"
	t               = tower
	gui             = tower
	g               = gui

	# Sublime Merge.
	smerge          = "! '/Applications/Sublime Merge.app/Contents/SharedSupport/bin/smerge' ."

	co              = checkout

	# Commiting.
	cv               = commit --verbose # Commit with verbose messaging in editor.
	cva              = commit -a --verbose # Commit add all with verbose messaging in editor.
	cp              = "! function cp() { git commit -am '$1' && git p }; cp" # Commit and push.

	# Status
	stat            = status
	s               = status

	# Logs
	llog            = log --oneline --decorate --graph # Better log, looks better in CLI.
	l               = llog # Normal log, but looks better.
	tl              = tower-log
	tlog            = tower-log # Graphical log.

	# Reset & Clear
	rhh             = reset --hard HEAD # Reset easily.
	rhhc            = "! git rhh && git clear" # Reset and remove new files.
	clear           = clean -df # Just remove new files

	# Push/Pull
	p               = "! git push -u origin \"$(git rev-parse --abbrev-ref HEAD)\"" # git push current branch.
	u               = "! git pull origin \"$(git rev-parse --abbrev-ref HEAD)\"" # git pull current branch.

	# Branches
	b               = "! echo $(git branch --show-current)" # Show the current branch.
	cb              = "! git b | pbcopy" # Copy the current branch to the clipboard.
	db              = "! function db() { git branch -D $1; git push origin :$1 ;}; db"
	dt              = "! function dt() { git tag -d $1; git push origin :refs/tags/$1; }; dt"
	fb              = "! /bin/bash -c 'source $HOME/.antigen/bundles/aubreypwd/zsh-plugin-fzf-git-branch/fzf-git-branch.plugin.zsh && fzf-git-branch'" # See https://github.com/aubreypwd/zsh-plugin-fzf-git-branch

	# Tags
	mt              = "! function mt() { git dt $1; git tag $1; git push --tags; }; mt" # Move tag here.

	# gh
	pr              = "! gh pr $2 $3 $4 $5 $6 $7 $8 $9"

	# DIFFs
	d               = diff
	diffs           = diff --staged
	ds              = diffs

[push]
	default = current

[user]
	name = Aubrey Portwood
	email = code@aubreypwd.com

[core]
	editor = vim
	excludesfile = /Users/aubreypwd/.gitignore

[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true

[credential]
	helper = osxkeychain

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "status"]
	added = green
	changed = red bold
	untracked = magenta bold

[color "branch"]
	remote = yellow

[gui]
	tabsize = 2

[diff]
	noprefix = true

[pager]
	diff = false
	show = false

[mergetool "smerge"] # Sublime Merge as mergetool
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true

[merge]
	tool = smerge

[mergetool]
	keepBackup = false

[pull]
	rebase = false

[ghq]
	root = ~/Repos
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
